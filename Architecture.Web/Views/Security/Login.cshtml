@model Architecture.Generic.Models.ViewModel.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@Html.Hidden("LoginModel", Common.SerializeObject(Model))
<div data-ng-controller="LoginController">
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-6">
            <form class="" id="frmLogin">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { data_ng_model="LoginModel.Email", placeholder = "Email", @class = "form-control", maxlength = 128, name = "Email" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { data_ng_model = "LoginModel.Password", placeholder = "Password", @class = "form-control", maxlength = 50, name = "Password", autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div>
                    <button type="submit" data-ng-click="AuthenticateUser()" class="btn btn-primary">Login</button>
                    <a href="javascript:;" class="">Forgot Password ?</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/security/loginjs")
}
